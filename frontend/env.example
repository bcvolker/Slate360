# Security Configuration
# Copy this file to .env and fill in your actual values

# CSRF Protection
CSRF_SECRET=your-secure-csrf-secret-key-change-in-production

# Encryption
ENCRYPTION_MASTER_KEY=your-encryption-master-key-change-in-production

# File Upload Security
VIRUS_TOTAL_API_KEY=your-virustotal-api-key
CLAMAV_HOST=localhost
CLAMAV_PORT=3310

# Rate Limiting
REDIS_URL=redis://localhost:6379

# AWS S3 (for secure file uploads)
AWS_S3_BUCKET=your-bucket-name
AWS_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Security Headers
SECURITY_STRICT_MODE=true

# Session Security
SESSION_TIMEOUT=86400000
MAX_CONCURRENT_SESSIONS=3

# MFA Configuration
MFA_REQUIRED=false
MFA_BACKUP_CODES=true

# Monitoring
SECURITY_ALERTING=true
SECURITY_REAL_TIME=true

# NextAuth Configuration
NEXTAUTH_SECRET=your-nextauth-secret-key
NEXTAUTH_URL=http://localhost:3000

# Database
MONGODB_URI=mongodb://localhost:27017/slate360

# Stripe (for payments)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret
